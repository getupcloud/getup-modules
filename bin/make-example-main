#!/usr/bin/env python

import os
import sys
import hcl2
import json

if len(sys.argv) < 3:
    print(f"Usage {sys.argv[0]} module-name module-version", file=sys.stderr)
    sys.exit(1)

module_name, tag = sys.argv[1:3]
hcl = hcl2.api.load(sys.stdin)
config = {}

with open('examples/config.json', 'r') as f:
    config = json.load(f)

print(f'''
# File auto-generated by {sys.argv[0]}

module "{module_name}" {{
  source = "git@github.com:getupcloud/terraform-modules//modules/{module_name}?ref={tag}"
'''.strip())
print()

for i, variable in enumerate(hcl.get('variable')):
    for name, content in variable.items():
        if name in config["no_use_var"]:
            #print(f'-> Ignored tfvar: {name}', file=sys.stderr)
            continue
        value = config["map_var"].get(name, f'var.{name}')
        #print(f'-> Mapped var: {name} = {value}', file=sys.stderr)
        print(f'  {name} = {value}')
print('}')
