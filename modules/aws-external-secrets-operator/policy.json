{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Action": [
        "secretsmanager:GetResourcePolicy",
        "secretsmanager:GetSecretValue",
        "secretsmanager:DescribeSecret",
        "secretsmanager:ListSecretVersionIds"
      ],
      "Resource": ${ jsonencode([ for name in all_secrets : "arn:aws:secretsmanager:${aws_region}:${aws_account_id}:secret:${name}" ]) }
    }
  ]
}
